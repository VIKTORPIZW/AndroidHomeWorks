<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar style="@style/Toolbar">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                style="@style/ToolbarViews"
                android:id="@+id/toolbarEditBackButton"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                android:layout_gravity="start|center" />

            <TextView
                style="@style/ToolbarViews"
                android:text="@string/Edit_contact"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageView
                style="@style/ToolbarViews"
                android:id="@+id/toolbarEditSaveButton"
                android:layout_gravity="end|center"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/ic_baseline_done_24" />
        </FrameLayout>
    </Toolbar>

    <EditText
        android:id="@+id/nameEditTextView"
        style="@style/MainStyle"
        android:layout_marginTop="60dp"
        android:hint="@string/contact_name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextViewInfo"
        style="@style/MainStyle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/contact_info"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/removeButton"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="80dp"
            android:background="@drawable/remove_button_background"
            android:text="@string/Remove"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:theme="@style/Theme.HW4_1_For_Button" />
    </FrameLayout>
</LinearLayout>